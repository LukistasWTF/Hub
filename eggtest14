-- Minigames Hub (Travel via real doors + back-steps + Aztec-first) Â· LocalScript
-- No usa InteriorsM. Cruza TouchToEnter como un jugador real.

--== Config
local AZTEC_ROOT_NAME = "MainMap!Aztec" -- workspace/Interiors/<esto>/Doors/*

--== Servicios
local Players, RS, RunService, StarterGui, UIS, VU, TweenService =
	game:GetService("Players"), game:GetService("ReplicatedStorage"),
	game:GetService("RunService"), game:GetService("StarterGui"),
	game:GetService("UserInputService"), game:GetService("VirtualUser"),
	game:GetService("TweenService")

local LP = Players.LocalPlayer

--== Mensajes
local function say(msg)
	print("[Hub] "..msg)
	pcall(function() StarterGui:SetCore("ChatMakeSystemMessage",{Text="[Hub] "..msg}) end)
end

--== Fsys / Roact (solo UI; la lÃ³gica funciona igual si faltan)
local Fsys do local ok,res=pcall(function() return require(RS:WaitForChild("Fsys")) end); if ok then Fsys=res end end
local Roact = Fsys and (pcall(function() return Fsys.load("Roact") end)) and Fsys.load("Roact") or nil

--== Helpers
local function getHRP()
	local ch = LP.Character or LP.CharacterAdded:Wait()
	return ch:WaitForChild("HumanoidRootPart"), ch:WaitForChild("Humanoid")
end
local function formatClock(sec) sec=math.max(0,math.floor(sec)); return ("%02d:%02d"):format(math.floor(sec/60),sec%60) end

local function fadeWhite(duration, from, to, yields)
	local sg = Instance.new("ScreenGui"); sg.ResetOnSpawn=false; sg.IgnoreGuiInset=true; sg.DisplayOrder=1e6
	sg.Name="RR_Fade"; sg.Parent=LP:WaitForChild("PlayerGui")
	local f = Instance.new("Frame"); f.BackgroundColor3=Color3.new(1,1,1); f.BorderSizePixel=0
	f.Size=UDim2.fromScale(1,1); f.BackgroundTransparency=from or 1; f.Parent=sg
	local tw = TweenService:Create(f, TweenInfo.new(duration or 0.5), {BackgroundTransparency=to or 0})
	tw:Play(); if yields then tw.Completed:Wait() end
	task.delay(0.5, function() if sg.Parent then sg:Destroy() end end)
end

--==============================================================================
--                                 TELEPORTS
--==============================================================================
local Tele = {
	busy = false,
	currentInterior = AZTEC_ROOT_NAME, -- empezamos suponiendo exterior
}

local function prettyLabel(s) local i=string.find(s,"/"); return i and string.sub(s,1,i-1) or s end

local function getAztecDoorsFolder()
	local interiors = workspace:FindFirstChild("Interiors"); if not interiors then return nil end
	local root = interiors:FindFirstChild(AZTEC_ROOT_NAME); if not root then return nil end
	return root:FindFirstChild("Doors")
end

local function getInteriorByName(n)
	local interiors = workspace:FindFirstChild("Interiors"); return interiors and interiors:FindFirstChild(n) or nil
end

local function getDoorTouch(doorModel)
	if not (doorModel and doorModel:IsA("Model")) then return nil end
	local wp = doorModel:FindFirstChild("WorkingParts"); return wp and wp:FindFirstChild("TouchToEnter")
end

-- Adivina posiciÃ³n actual si el estado se perdiÃ³
function Tele.guessWhereAmI()
	local hrp = LP.Character and LP.Character:FindFirstChild("HumanoidRootPart")
	if not hrp then return Tele.currentInterior end
	local interiors = workspace:FindFirstChild("Interiors"); if not interiors then return Tele.currentInterior end
	local nearName, nearDist
	for _,zone in ipairs(interiors:GetChildren()) do
		if zone.Name ~= AZTEC_ROOT_NAME and zone:FindFirstChild("Doors") then
			local main = zone.Doors:FindFirstChild("MainDoor")
			local t = getDoorTouch(main)
			if t then
				local d = (t.Position - hrp.Position).Magnitude
				if not nearDist or d<nearDist then nearDist=d; nearName=zone.Name end
			end
		end
	end
	if nearName and nearDist<180 then Tele.currentInterior = nearName else Tele.currentInterior = AZTEC_ROOT_NAME end
	return Tele.currentInterior
end

-- 3 pasitos hacia ATRÃS respecto a un CFrame â€œmirando a la puertaâ€
local function threeBackSteps(faceCF, stepLen, waits)
	local hrp,_ = getHRP()
	stepLen = stepLen or 1.25; waits = waits or 0.06
	for _=1,3 do
		local forward = faceCF.LookVector; local back = -forward
		hrp.CFrame = CFrame.new(hrp.Position + back * stepLen, hrp.Position + forward)
		RunService.Heartbeat:Wait(); task.wait(waits)
	end
end

-- Cruza el TouchToEnter (dir = "in" | "out")
local function crossTouch(touch, dir, doBackSteps)
	local hrp,hum = getHRP()
	if hum.Sit then
		hum.Sit=false; hum.Jump=true
		local weld = hum.SeatPart and hum.SeatPart:FindFirstChild("SeatWeld"); if weld then weld:Destroy() end
		task.wait(0.15)
	end

	pcall(function() LP:RequestStreamAroundAsync(touch.Position, 4) end)

	local base = touch.CFrame
	local up   = Vector3.new(0,1.6,0)
	local outPos = base.Position + base.LookVector*(touch.Size.Z/2 + 6) + up
	local inPos  = base.Position - base.LookVector*(touch.Size.Z/2 + 2) + up
	local startPos, endPos = (dir=="in") and outPos or inPos, (dir=="in") and inPos or outPos

	hrp.Anchored=false
	local faceCF = CFrame.new(startPos, endPos); hrp.CFrame = faceCF
	RunService.Heartbeat:Wait()

	if doBackSteps then threeBackSteps(faceCF, 1.2, 0.05) end

	for i=0,14 do
		local pos = startPos:Lerp(endPos, i/14)
		hrp.CFrame = CFrame.new(pos, endPos)
		RunService.Heartbeat:Wait()
	end
end

-- Entra desde Aztec a Doors/<doorKey>
function Tele.enterFromAztec(doorKey)
	local doors = getAztecDoorsFolder()
	if not doors then say("[TP] No encuentro Interiors/"..AZTEC_ROOT_NAME.."/Doors"); return false end
	local door = doors:FindFirstChild(doorKey)
	if not door then say("[TP] Door '"..doorKey.."' no existe en Doors"); return false end
	local touch = getDoorTouch(door)
	if not touch then say("[TP] '"..doorKey.."' no tiene WorkingParts.TouchToEnter"); return false end

	fadeWhite(0.20,1,0,true)
	crossTouch(touch, "in", true) -- 3 pasos hacia atrÃ¡s
	task.wait(0.05)
	fadeWhite(0.35,0,1,false)

	-- Actualiza interior real usando destination_id si existe
	local destId = (((door:FindFirstChild("WorkingParts") or {}).Configuration) and (door.WorkingParts.Configuration:FindFirstChild("destination_id"))) and door.WorkingParts.Configuration.destination_id.Value or prettyLabel(doorKey)
	Tele.currentInterior = destId ~= "" and destId or prettyLabel(doorKey)

	say("[TP] Dentro â†’ "..Tele.currentInterior)
	return true
end

-- Sale del interior actual por su Doors/MainDoor hacia Aztec
function Tele.exitToAztec()
	local here = Tele.currentInterior or Tele.guessWhereAmI()
	if here == AZTEC_ROOT_NAME then return true end

	local interior = getInteriorByName(here)
	if not (interior and interior:FindFirstChild("Doors")) then
		say("[TP] No encuentro Doors en "..tostring(here).."; re-detectando ubicaciÃ³nâ€¦")
		Tele.guessWhereAmI()
		interior = getInteriorByName(Tele.currentInterior)
		if not (interior and interior:FindFirstChild("Doors")) then
			say("[TP] Cancelado: sin Doors/MainDoor para salir.")
			return false
		end
	end

	local door = interior.Doors:FindFirstChild("MainDoor") or interior.Doors:FindFirstChild("Exit") or interior.Doors:GetChildren()[1]
	local touch = getDoorTouch(door)
	if not touch then say("[TP] MainDoor sin TouchToEnter en "..here); return false end

	fadeWhite(0.20,1,0,true)
	crossTouch(touch, "out", false)
	task.wait(0.05)
	fadeWhite(0.35,0,1,false)

	Tele.currentInterior = AZTEC_ROOT_NAME
	say("[TP] Fuera â†’ "..AZTEC_ROOT_NAME)
	return true
end

-- Viaje completo (regla: siempre volver a Aztec entre destinos, 5s de espera)
function Tele.travelTo(doorKey, statusCb)
	if Tele.busy then return end
	Tele.busy = true
	statusCb = statusCb or function() end

	task.spawn(function()
		local ok,err = pcall(function()
			if not Tele.currentInterior then Tele.guessWhereAmI() end
			local destName = prettyLabel(doorKey)

			if Tele.currentInterior ~= AZTEC_ROOT_NAME then
				statusCb("Saliendo de "..Tele.currentInterior.."...")
				if not Tele.exitToAztec() then statusCb("No se pudo salir."); return end
				statusCb("Esperando 5sâ€¦"); task.wait(5)
			end

			statusCb("Entrando a "..destName.."...")
			local entered = Tele.enterFromAztec(doorKey)
			statusCb(entered and ("Dentro â†’ "..(Tele.currentInterior or destName)) or "FallÃ³ la entrada")
		end)
		if not ok then
			warn("[TP] Error de viaje: ", err)
			statusCb("Error: "..tostring(err))
		end
		Tele.busy = false
	end)
end

