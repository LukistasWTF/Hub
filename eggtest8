-- Minigames Hub (RuinRush 1.0 + Teleports que ENTRAN, sin InteriorsM, con DownloadClient) · LocalScript

--== Config
local AZTEC_ROOT_NAME = "MainMap!Aztec" -- workspace/Interiors/<esto>/Doors/*

--== Servicios
local Players, RS, RunService, StarterGui, UIS, VU, TweenService =
	game:GetService("Players"), game:GetService("ReplicatedStorage"),
	game:GetService("RunService"), game:GetService("StarterGui"),
	game:GetService("UserInputService"), game:GetService("VirtualUser"),
	game:GetService("TweenService")

local LP = Players.LocalPlayer

--== Mensajes
local function say(msg)
	print("[Hub] "..msg)
	pcall(function() StarterGui:SetCore("ChatMakeSystemMessage",{Text="[Hub] "..msg}) end)
end

--== Fsys / Roact / Mods usados
local Fsys; do local ok,res=pcall(function() return require(RS:WaitForChild("Fsys")) end); if ok then Fsys=res end end
local Roact = Fsys and (pcall(function() return Fsys.load("Roact") end)) and Fsys.load("Roact") or nil
local DownloadClient = Fsys and (pcall(function() return Fsys.load("DownloadClient") end)) and Fsys.load("DownloadClient") or nil
local DoorsM = Fsys and (pcall(function() return Fsys.load("DoorsM") end)) and Fsys.load("DoorsM") or nil

--== Helpers
local function getHRP()
	local ch = LP.Character or LP.CharacterAdded:Wait()
	return ch:WaitForChild("HumanoidRootPart"), ch:WaitForChild("Humanoid")
end
local function formatClock(sec) sec=math.max(0,math.floor(sec)); return ("%02d:%02d"):format(math.floor(sec/60),sec%60) end

local function fadeWhite(duration, from, to, yields)
	local sg = Instance.new("ScreenGui"); sg.ResetOnSpawn=false; sg.IgnoreGuiInset=true; sg.DisplayOrder=1e6
	sg.Name="RR_Fade"; sg.Parent=LP:WaitForChild("PlayerGui")
	local f = Instance.new("Frame"); f.BackgroundColor3=Color3.new(1,1,1); f.BorderSizePixel=0
	f.Size=UDim2.fromScale(1,1); f.BackgroundTransparency=from or 1; f.Parent=sg
	local tw = TweenService:Create(f, TweenInfo.new(duration or 0.5), {BackgroundTransparency=to or 0})
	tw:Play(); if yields then tw.Completed:Wait() end
	task.delay(0.5, function() if sg.Parent then sg:Destroy() end end)
end

-- =============================================================================
--                         Carga/descarga del interior (DownloadClient)
-- =============================================================================
local downloadedClone -- referencia al clon cliente (si lo usamos)
local function ensureAztecLoaded()
	local interiors = workspace:FindFirstChild("Interiors")
	if not interiors then
		say("[DL] No existe workspace.Interiors."); return nil
	end
	local root = interiors:FindFirstChild(AZTEC_ROOT_NAME)
	if root and root:IsDescendantOf(workspace) then
		return root
	end
	if not DownloadClient then
		say("[DL] Falta DownloadClient (Fsys)."); return nil
	end
	-- Descargar del servidor al cliente y montar en workspace
	local ok, model = pcall(function()
		return DownloadClient.download("Interiors", AZTEC_ROOT_NAME)
	end)
	if not ok or not model then
		say("[DL] No se pudo descargar '"..AZTEC_ROOT_NAME.."'."); return nil
	end
	model.Name = AZTEC_ROOT_NAME
	model:SetAttribute("ClientDownloaded", true)
	model.Parent = interiors
	downloadedClone = model
	say("[DL] Interior montado localmente: "..AZTEC_ROOT_NAME)

	-- Si aparece el interior real del servidor, retiramos nuestro clon
	task.spawn(function()
		local con; con = interiors.ChildAdded:Connect(function(child)
			if child ~= model and child.Name==AZTEC_ROOT_NAME and not child:GetAttribute("ClientDownloaded") then
				say("[DL] Detectado interior del servidor; elimino clon local.")
				if model.Parent then model:Destroy() end
				if con then con:Disconnect() end
			end
		end)
	end)

	return model
end

-- Obtener carpeta Doors (asegurando descarga si falta)
local function getAztecDoorsFolder()
	local root = ensureAztecLoaded()
	return root and root:FindFirstChild("Doors") or nil
end

-- Buscar un modelo de puerta por destino (dest_id/door_id) en cualquier interior
local function findDoorByDestination(dest_id, door_id)
	local interiors = workspace:FindFirstChild("Interiors"); if not interiors then return end
	for _,container in ipairs(interiors:GetChildren()) do
		local doors = container:FindFirstChild("Doors")
		if doors then
			for _,d in ipairs(doors:GetChildren()) do
				local wp = d:FindFirstChild("WorkingParts")
				local cfg = wp and wp:FindFirstChild("Configuration")
				local di  = cfg and cfg:FindFirstChild("destination_id")
				local dd  = cfg and cfg:FindFirstChild("destination_door_id")
				if di and tostring(di.Value)==dest_id and (not door_id or (dd and tostring(dd.Value)==door_id)) then
					return d
				end
			end
		end
	end
end

-- Asegura que DoorsM tenga el Door.new conectado (para que .Touched haga enter)
local function ensureDoorWired(doorModel)
	if DoorsM and doorModel then
		pcall(function() DoorsM.get_door(doorModel) end)
	end
end

-- Barrer Touch de fuera -> dentro para disparar Touched
local function walkThroughTouch(touch, faceInside)
	local hrp,hum = getHRP()
	-- salir de asiento si hace falta
	if hum.Sit then
		hum.Sit=false; hum.Jump=true
		local weld = hum.SeatPart and hum.SeatPart:FindFirstChild("SeatWeld")
		if weld then weld:Destroy() end
		task.wait(0.2)
	end

	pcall(function() LP:RequestStreamAroundAsync(touch.Position, 2) end)

	local base = touch.CFrame
	local up   = Vector3.new(0, 1.6, 0)
	local outside = base.Position + base.LookVector * (touch.Size.Z/2 + 6) + up
	local inside  = base.Position - base.LookVector * (touch.Size.Z/2 + 2) + up
	local lookDir = faceInside and (-base.LookVector) or (base.LookVector)

	hrp.Anchored=false
	hrp.CFrame = CFrame.new(outside, outside + lookDir)

	local hbConn = RunService.Heartbeat:Connect(function()
		if hum and hum.Parent then hum:Move(lookDir) end
	end)

	for i=0,14 do
		local pos = outside:Lerp(inside, i/14)
		hrp.CFrame = CFrame.new(pos, pos + lookDir)
		RunService.Heartbeat:Wait()
	end

	if hbConn then hbConn:Disconnect() end
end

-- 3 pasos hacia atrás (suaves)
local function stepBackwards(times, stepStuds, perStepWait)
	times = times or 3; stepStuds = stepStuds or 1.25; perStepWait = perStepWait or 0.08
	local hrp = getHRP()
	for _=1,times do
		hrp.CFrame = hrp.CFrame * CFrame.new(0,0, stepStuds) -- atrás en local
		RunService.Heartbeat:Wait()
		task.wait(perStepWait)
	end
end

-- Pre-paso: salir a MainMap/MainDoor cruzando una puerta real (sin InteriorsM)
local function goViaMainDoor()
	-- asegúrate de tener algún Door que vaya a MainMap/MainDoor
	local door = findDoorByDestination("MainMap","MainDoor") or (ensureAztecLoaded() and findDoorByDestination("MainMap","MainDoor"))
	if not door then
		say("[TP] No localicé puerta a MainMap/MainDoor para el pre-paso."); return false
	end
	local touch = door:FindFirstChild("WorkingParts") and door.WorkingParts:FindFirstChild("TouchToEnter")
	if not (touch and touch:IsA("BasePart")) then
		say("[TP] La puerta de pre-paso no tiene TouchToEnter."); return false
	end
	ensureDoorWired(door) -- enlaza Door.new para que .Touched provoque enter
	say("[TP] Pre-paso por MainDoor → MainMap…")
	fadeWhite(0.18,1,0,true)
	walkThroughTouch(touch, true)
	task.wait(0.05)
	fadeWhite(0.26,0,1,false)
	return true
end

-- =============================================================================
--                         TELEPORTS (ENTRAR por puerta final)
-- =============================================================================
local Tele = {}

local function prettyLabel(s)
	local i = string.find(s,"/"); return i and string.sub(s,1,i-1) or s
end

-- doorKey: nombre EXACTO en Doors (ej. "AFKZone/MainDoor")
function Tele.enterAztecDoor(doorKey)
	-- 1) Pre-paso por MainDoor y 5 s de espera
	goViaMainDoor()
	task.wait(5)

	-- 2) Asegurar interior/carpeta Doors y localizar la puerta destino
	local doors = getAztecDoorsFolder()
	if not doors then say("[TP] No encuentro Interiors/"..AZTEC_ROOT_NAME.."/Doors"); return false end
	local door = doors:FindFirstChild(doorKey)
	if not (door and door:IsA("Model")) then say("[TP] Door '"..doorKey.."' no existe en Doors"); return false end
	local touch = door:FindFirstChild("WorkingParts") and door.WorkingParts:FindFirstChild("TouchToEnter")
	if not (touch and touch:IsA("BasePart")) then say("[TP] '"..doorKey.."' sin TouchToEnter."); return false end

	-- 3) Asegurar que esa puerta tiene Door.new conectado
	ensureDoorWired(door)

	-- 4) Retroceso de 3 pasos
	stepBackwards(3, 1.25, 0.08)

	-- 5) Entrar cruzando físicamente el TouchToEnter (legítimo)
	fadeWhite(0.18,1,0,true)
	walkThroughTouch(touch, true)
	task.wait(0.05)
	fadeWhite(0.26,0,1,false)

	say("[TP] Entrando por Doors/"..doorKey)
	return true
end

