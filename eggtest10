-- Minigames Hub (RuinRush 1.0 + Teleports con retorno por la misma MainDoor) ¬∑ LocalScript
-- ‚≠ê Colocar en StarterPlayerScripts (CLIENTE). No funciona en Script de servidor.

--== Config
local AZTEC_ROOT_NAME = "MainMap!Aztec" -- workspace/Interiors/<esto>/Doors/*

--== Guardia: asegurar que es cliente
if not game:GetService("Players").LocalPlayer then
	warn("[Hub] Este archivo debe ser un LocalScript en StarterPlayerScripts.")
	return
end

--== Servicios
local Players, RS, RunService, StarterGui, UIS, VU, TweenService =
	game:GetService("Players"), game:GetService("ReplicatedStorage"),
	game:GetService("RunService"), game:GetService("StarterGui"),
	game:GetService("UserInputService"), game:GetService("VirtualUser"),
	game:GetService("TweenService")

local LP = Players.LocalPlayer

--== Mensajes
local function say(msg)
	print("[Hub] "..msg)
	pcall(function() StarterGui:SetCore("ChatMakeSystemMessage",{Text="[Hub] "..msg}) end)
end

--== Fsys / Roact / DoorsM (si no est√°n, el Hub visual se omite y la l√≥gica sigue)
local Fsys do
	local ok,res = pcall(function() return require(RS:WaitForChild("Fsys")) end)
	if ok then Fsys = res end
end
local Roact = nil
if Fsys then
	local ok = pcall(function() return Fsys.load("Roact") end)
	if ok then Roact = Fsys.load("Roact") end
end
local DoorsM = nil
if Fsys then
	local ok = pcall(function() return Fsys.load("DoorsM") end)
	if ok then DoorsM = Fsys.load("DoorsM") end
end

--== Helpers
local function getHRP()
	local ch = LP.Character or LP.CharacterAdded:Wait()
	return ch:WaitForChild("HumanoidRootPart"), ch:WaitForChild("Humanoid")
end
local function formatClock(sec) sec=math.max(0,math.floor(sec)); return ("%02d:%02d"):format(math.floor(sec/60),sec%60) end

-- Fade blanco r√°pido para el ‚Äúenter/exit‚Äù
local function fadeWhite(duration, from, to, yields)
	local pg = LP:WaitForChild("PlayerGui")
	local sg = Instance.new("ScreenGui"); sg.ResetOnSpawn=false; sg.IgnoreGuiInset=true; sg.DisplayOrder=1e6
	sg.Name="RR_Fade"; sg.Parent=pg
	local f = Instance.new("Frame"); f.BackgroundColor3=Color3.new(1,1,1); f.BorderSizePixel=0
	f.Size=UDim2.fromScale(1,1); f.BackgroundTransparency=from or 1; f.Parent=sg
	local tw = TweenService:Create(f, TweenInfo.new(duration or 0.45), {BackgroundTransparency=to or 0})
	tw:Play(); if yields then tw.Completed:Wait() end
	task.delay(0.5, function() if sg.Parent then sg:Destroy() end end)
end

-- =============================================================================
--                      Puertas (buscar y cruzar TouchToEnter)
-- =============================================================================

-- Carpeta Doors del Aztec root
local function getAztecDoorsFolder()
	local interiors = workspace:FindFirstChild("Interiors")
	if not interiors then return end
	local root = interiors:FindFirstChild(AZTEC_ROOT_NAME)
	return root and root:FindFirstChild("Doors") or nil
end

-- Buscar un descendiente por ruta "A/B/C"
local function findByPath(root, path)
	if not (root and path) then return end
	local node = root
	for seg in string.gmatch(path, "[^/]+") do
		node = node and node:FindFirstChild(seg)
	end
	return node
end

-- Adivinar la MainDoor m√°s cercana (si el jugador entr√≥ sin el Hub)
local function guessCurrentMainDoor()
	local interiors = workspace:FindFirstChild("Interiors"); if not interiors then return end
	local hrp = (LP.Character or LP.CharacterAdded:Wait()):FindFirstChild("HumanoidRootPart"); if not hrp then return end
	local best, bestDist
	for _,container in ipairs(interiors:GetChildren()) do
		local doors = container:FindFirstChild("Doors")
		local main = doors and doors:FindFirstChild("MainDoor")
		local touch = main and main:FindFirstChild("WorkingParts") and main.WorkingParts:FindFirstChild("TouchToEnter")
		if touch and touch:IsA("BasePart") then
			local d = (touch.Position - hrp.Position).Magnitude
			if not best or d < bestDist then best, bestDist = main, d end
		end
	end
	return best
end

-- Si DoorsM est√° disponible, registramos la puerta para que el sistema nativo responda a .Touched
local function ensureDoorWired(doorModel)
	if DoorsM and doorModel then
		pcall(function() DoorsM.get_door(doorModel) end)
	end
end

-- Caminar a trav√©s del TouchToEnter.
-- faceInside=true => de fuera hacia dentro; false => de dentro hacia fuera
local function walkThroughTouch(touch, faceInside)
	local hrp,hum = getHRP()

	-- salir de asiento si hace falta
	if hum.Sit then
		hum.Sit=false; hum.Jump=true
		local weld = hum.SeatPart and hum.SeatPart:FindFirstChild("SeatWeld")
		if weld then weld:Destroy() end
		task.wait(0.2)
	end

	-- stream seguro
	pcall(function() LP:RequestStreamAroundAsync(touch.Position, 2) end)

	local base = touch.CFrame
	local up   = Vector3.new(0, 1.6, 0)
	local outside = base.Position + base.LookVector * (touch.Size.Z/2 + 6) + up
	local inside  = base.Position - base.LookVector * (touch.Size.Z/2 + 2) + up

	local startPos = faceInside and outside or inside
	local endPos   = faceInside and inside  or outside
	local lookDir  = faceInside and (-base.LookVector) or (base.LookVector)

	hrp.Anchored=false
	hrp.CFrame = CFrame.new(startPos, startPos + lookDir)

	-- empuje suave mientras cruza (ayuda a disparar .Touched)
	local hbConn = RunService.Heartbeat:Connect(function()
		if hum and hum.Parent then hum:Move(lookDir) end
	end)

	for i=0,14 do
		local pos = startPos:Lerp(endPos, i/14)
		hrp.CFrame = CFrame.new(pos, pos + lookDir)
		RunService.Heartbeat:Wait()
	end

	if hbConn then hbConn:Disconnect() end
end

-- Tres pasitos hacia atr√°s antes de entrar (cosm√©tico/petici√≥n)
local function stepBackwards(times, stepStuds, perStepWait)
	times = times or 3; stepStuds = stepStuds or 1.25; perStepWait = perStepWait or 0.08
	local hrp = getHRP()
	for _=1,times do
		hrp.CFrame = hrp.CFrame * CFrame.new(0,0, stepStuds) -- atr√°s respecto a tu look
		RunService.Heartbeat:Wait()
		task.wait(perStepWait)
	end
end

-- =============================================================================
--                     Gestor de Teleports (retorno + entrada)
-- =============================================================================
local Tele = {
	lastEnteredDoor = nil, -- Model de la √∫ltima puerta usada para ENTRAR (se usa para salir)
	busy = false,
	delayAfterExit = 5, -- segundos entre salir y nuevo salto
}

local function prettyLabel(s) local i=string.find(s,"/"); return i and string.sub(s,1,i-1) or s end

-- Cambiar a otra puerta:
-- 1) si hay interior activo y sabemos la puerta, salimos por esa MainDoor (a Aztec)
-- 2) esperamos 5s
-- 3) entramos al destino cruzando su Touch
function Tele.gotoDoorWithReturn(doorKey)
	if Tele.busy then say("[TP] Ocupado, espera‚Ä¶"); return end
	Tele.busy = true

	task.spawn(function()
		-- 1) Salir por la MISMA puerta si procede
		local mustExit = Tele.lastEnteredDoor ~= nil
		if not Tele.lastEnteredDoor then
			local guessed = guessCurrentMainDoor()
			if guessed then Tele.lastEnteredDoor = guessed; mustExit = true end
		end

		if mustExit and Tele.lastEnteredDoor and Tele.lastEnteredDoor.Parent then
			local touchOut = Tele.lastEnteredDoor:FindFirstChild("WorkingParts")
			touchOut = touchOut and touchOut:FindFirstChild("TouchToEnter")
			if touchOut and touchOut:IsA("BasePart") then
				ensureDoorWired(Tele.lastEnteredDoor)
				say("[TP] Saliendo por la misma MainDoor ‚Üí "..(Tele.lastEnteredDoor.Name or "?"))
				fadeWhite(0.18,1,0,true)
				walkThroughTouch(touchOut, false) -- salir
				task.wait(0.05)
				fadeWhite(0.26,0,1,false)
			else
				say("[TP] No pude usar la puerta de salida (Touch faltante). Intentar√© continuar.")
			end
		end

		-- 2) Espera
		task.wait(Tele.delayAfterExit)

		-- 3) Entrar al destino en MainMap!Aztec
		local doors = getAztecDoorsFolder()
		if not doors then
			say("[TP] No encuentro Interiors/"..AZTEC_ROOT_NAME.."/Doors"); Tele.busy=false; return
		end

		local target = findByPath(doors, doorKey) or doors:FindFirstChild(doorKey)
		if not (target and target:IsA("Model")) then
			say("[TP] Door '"..doorKey.."' no existe en Doors"); Tele.busy=false; return
		end
		local touchIn = target:FindFirstChild("WorkingParts")
		touchIn = touchIn and touchIn:FindFirstChild("TouchToEnter")
		if not (touchIn and touchIn:IsA("BasePart")) then
			say("[TP] '"..doorKey.."' sin TouchToEnter."); Tele.busy=false; return
		end

		ensureDoorWired(target)

		-- Pasitos hacia atr√°s antes de entrar
		stepBackwards(3, 1.25, 0.08)

		fadeWhite(0.18,1,0,true)
		walkThroughTouch(touchIn, true) -- entrar
		task.wait(0.05)
		fadeWhite(0.26,0,1,false)

		-- Guardar para el pr√≥ximo cambio
		Tele.lastEnteredDoor = target
		say("[TP] Dentro ‚Üí "..prettyLabel(doorKey))

		Tele.busy = false
	end)
end

-- Opciones del desplegable
local TELEPORT_OPTIONS = {
	"AFKZone/MainDoor",
	"AutoShop/MainDoor",
	"AztecLobbyEntrance",
	"AztecPortalExit",
